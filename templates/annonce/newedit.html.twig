{% extends 'base.html.twig' %}

{% block title %}Ajouter une annonce{% endblock %}

{% block body %}
{% for flash_error in app.flashes('verify_email_error') %}
<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
{% endfor %}

    <h1>Ajouter une annonce</h1>

    {{ form_errors(form) }}

    {{ form_start(form, {attr: {id: 'newAnnonceForm'}}) }}
    {{ form_row(form.title) }}
    {{ form_row(form.description) }}
    {{ form_row(form.price) }}
    {{ form_row(form.state)}}
    {{ form_row(form.city) }}
    {{ form_row(form.zipcode) }}
    {{ form_row(form.telephone) }}
    {{ form_row(form.isVisible) }}
    <fieldset class="candy">
        {{ form_label(form.phone) }}
        {{ form_errors(form.phone) }}
        {{ form_widget(form.phone) }}
    </fieldset>
    <fieldset class="candy">
        {{ form_label(form.faxNumber) }}
        {{ form_errors(form.faxNumber) }}
        {{ form_widget(form.faxNumber) }}
    </fieldset>
    {{ form_row(form.Category) }}
    {{ form_row(form.subcategory) }}
    {{ form_end(form) }}
{% endblock %}
